{% extends '_admin.base.html.twig' %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <h1>Comments</h1>
                <table class="table table-striped">
                    <tr>
                        <th>Comment</th>
                        <th>Event</th>
                        <th>Created At</th>
                        <th>Last Visited</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                    {#{{ dump(comments) }}#}

                    {% for comment in comments %}
                        <tr>
                            <td>{{ comment.comment }}</td>
                            <td>{{ comment.event }}</td>
                            <td>{{ comment.createdAt|date("jS F \\a\\t m/d/Y") }}</td>
                            <td>{{ comment.updatedAt|date("jS F \\a\\t g:ia m/d/Y") }}</td>
                            <td>
                                <a href="{{ path('admin_comment_edit', {'id': comment.id}) }}" class="btn btn-xs btn-success"><span class="fa fa-pencil">edit</span></a>
                            </td>
                            <td>
                                <a href="{{ path('admin_comment_delete', {'id': comment.id}) }}" class="btn btn-xs btn-success"><span class="fa fa-pencil">delete</span></a>
                            </td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
        </div>
    </div>

{% endblock body %}