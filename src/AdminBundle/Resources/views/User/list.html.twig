{% extends '_admin.base.html.twig' %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <h1>Registered Users</h1>
                <table class="table table-striped">
                    <tr>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Active Status</th>
                        <th>Created At</th>
                        <th>Last Visited</th>
                        <th>Edit</th>
                    </tr>
                    {#{{ dump(users) }}#}

                    {% for user in users %}
                        <tr>
                            <td>{{ user.username }}</td>
                            <td>{{ user.email }}</td>
                            <td>{{ user.isActive }}</td>
                            <td>{{ user.createdAt|date("jS F \\a\\t m/d/Y") }}</td>
                            <td>{{ user.updatedAt|date("jS F \\a\\t g:ia m/d/Y") }}</td>
                            <td>
                                <a href="{{ path('admin_user_edit', {'id': user.id}) }}" class="btn btn-xs btn-success"><span class="fa fa-pencil"></span></a>
                            </td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
        </div>
    </div>

{% endblock body %}